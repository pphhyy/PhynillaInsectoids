<Defs>

  <!-- Cera Alba -->
  
  <ThingDef ParentName="ResourceBase">
    <defName>CeraAlba</defName>
    <label>cera alba</label>
    <description>Cera Alba is naturally produced by Spelopedes as a construction material for the hive. It can be used for almost anything and everything. As strong as some stones its only downside is its flammability although for humans this is a good thing.</description>
    <graphicData>
      <texPath>Resources/CeraAlba</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <possessionCount>75</possessionCount>
    <useHitPoints>false</useHitPoints>
    <healthAffectsPrice>false</healthAffectsPrice>
    <soundInteract>ChunkRock_Drop</soundInteract>
    <soundDrop>ChunkRock_Drop</soundDrop>
    <statBases>
      <MarketValue>0.50</MarketValue>
      <Mass>0.1</Mass>
      <StuffPower_Armor_Sharp>0.7</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.35</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.40</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>6</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>3</StuffPower_Insulation_Heat>
	  <SharpDamageMultiplier>0.55</SharpDamageMultiplier>
      <BluntDamageMultiplier>0.75</BluntDamageMultiplier>
    </statBases>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <burnableByRecipe>false</burnableByRecipe>
    <smeltable>false</smeltable>
    <stuffProps>
      <categories>
        <li>Stony</li>
      </categories>
      <commonality>0.05</commonality>
	  <appearance>Bricks</appearance>
      <color>(107,106,78)</color>
      <constructEffect>ConstructMetal</constructEffect>
      <soundImpactBullet>BulletImpact_Ground</soundImpactBullet>
      <soundImpactMelee>Pawn_Melee_Punch_HitBuilding_Stone</soundImpactMelee>
      <soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>1.35</MaxHitPoints>
        <WorkToMake>1.2</WorkToMake>
        <WorkToBuild>2.0</WorkToBuild>
        <Flammability>0.2</Flammability>
		<DoorOpenSpeed>0.75</DoorOpenSpeed>
        <BedRestEffectiveness>0.95</BedRestEffectiveness>
      </statFactors>
    </stuffProps>
    <allowedArchonexusCount>80</allowedArchonexusCount>
  </ThingDef>
  
