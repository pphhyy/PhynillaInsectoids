<!-- Silk -->

<ThingDef ParentName="WoolBase">
  <defName>InsectoidSilk</defName>
  <label>insectoid silk</label>
  <description>Insectoid Silk woven by Silk Spelopedes is a basic building block of any hive, it can be used in building the hive as well as many other recipe's. For humans it can make  a great textile.</description>
  <possessionCount>30</possessionCount>
  <statBases>
    <StuffPower_Insulation_Cold>26</StuffPower_Insulation_Cold>
    <StuffPower_Insulation_Heat>10</StuffPower_Insulation_Heat>
  </statBases>
  <stuffProps>
    <color>(219,214,209)</color>
    <commonality>0.24</commonality>
  </stuffProps>
  <graphicData>
    <color>(219,214,209)</color>
    <texPath>Resources/InsectoidSilk</texPath>
